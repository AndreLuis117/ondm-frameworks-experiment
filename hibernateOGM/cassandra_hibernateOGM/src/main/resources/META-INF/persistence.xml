<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                           http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="cassandra_pu" transaction-type="JTA">
        <provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>

        <class>base.model.Address</class>
        <class>base.model.Client</class>
        <class>base.model.Electronic</class>
        <class>base.model.Order</class>
        <class>base.model.OrderItems</class>
        <class>base.model.Product</class>
        <class>base.model.ProductEmbeddable</class>
        <class>base.model.Status</class>
        <class>base.model.Toy</class>


        <properties>
<!--            <property name="hibernate.ogm.datastore.database" value="hibernateOgmDb" />-->
<!--            <property name="hibernate.ogm.datastore.host" value="127.0.0.1" />-->
            <property name="hibernate.ogm.datastore.provider" value="cassandra_experimental" />

<!--            <property name="hibernate.ogm.datastore.port" value="27017" />-->

            <property name="hibernate.ogm.datastore.create_database" value="true" />
        </properties>

    </persistence-unit>
</persistence>